{
    "name": "cron-eu/cli-tools",
    "config": {
        "platform": {
            "php": "8.4"
        }
    },
    "require": {
        "php": "^8.2 || ^8.3 || ^8.4",
        "symfony/console": "^7.1",
        "symfony/yaml": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "CliTools\\": "./app/CliTools/"
        }
    },
    "scripts": {
        "sniffer:php84": "phpcs -p ./app --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.4",
        "sniffer:php83": "phpcs -p ./app --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.3",
        "sniffer:php82": "phpcs -p ./app --standard=vendor/phpcompatibility/php-compatibility/PHPCompatibility --runtime-set testVersion 8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    }
}
